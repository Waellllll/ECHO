{% extends 'baseback.html.twig' %}

{% block title %}New Workshop{% endblock %}

{% block body %}
<div class="create-form-container">
  
         <h3>Create Form</h3>
 {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

<div class="form-group"> 
    {{ form_label(form.descr, 'Description', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.descr, {'attr': {'class': 'form-control', 'rows': 5}}) }} 
    {{ form_errors(form.descr) }} 
</div>

<div class="form-group"> 
    {{ form_label(form.imageFile, 'Image', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file', 'accept': 'image/*'}}) }}
    {{ form_errors(form.imageFile) }}
    <small class="form-text text-muted">Seuls les fichiers image (JPG, PNG, GIF) sont autoris√©s.</small>
</div>
<input type="hidden" name="idUser" value="{{ app.user.id }}">   
<button type="submit" class="btn btn-info mt-2 text-white">Submit</button>
 {{ form_end(form) }}
</div>
{% endblock %}