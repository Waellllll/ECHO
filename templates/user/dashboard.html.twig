{% extends 'baseback.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-5 text-primary">Tableau de bord des utilisateurs</h1>

        <div class="row">
            <!-- Section des statistiques -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Statistiques des utilisateurs</h5>

                        <!-- Box des statistiques -->
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="stat-box">
                                <h3>{{ professionnelsCount }}</h3>
                                <p>Professionnels</p>
                            </div>
                            <div class="stat-box">
                                <h3>{{ amateursCount }}</h3>
                                <p>Amateurs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section du graphique -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Répartition des utilisateurs</h5>
                        <canvas id="userChart" width="400" height="400"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charger Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('userChart').getContext('2d');
        var userChart = new Chart(ctx, {
            type: 'pie', // Graphique circulaire
            data: {
                labels: ['Professionnels', 'Amateurs'],
                datasets: [{
                    label: 'Nombre d\'utilisateurs',
                    data: [{{ professionnelsCount }}, {{ amateursCount }}],
                    backgroundColor: ['#4caf50', '#ff9800'], // Couleurs des secteurs
                    borderColor: ['#4caf50', '#ff9800'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                return tooltipItem.label + ': ' + tooltipItem.raw;
                            }
                        }
                    }
                }
            }
        });
    </script>

    <!-- Styles personnalisés -->
    <style>
        .stat-box {
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 48%;
            transition: all 0.3s ease;
        }
        
        .stat-box h3 {
            font-size: 2rem;
            color: #333;
        }

        .stat-box p {
            font-size: 1.1rem;
            color: #777;
        }

        .stat-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        /* Amélioration du style de la carte */
        .card {
            background-color: #ffffff;
            border-radius: 15px;
            border: none;
        }

        .card-body {
            padding: 30px;
        }

        .card-title {
            font-size: 1.5rem;
            color: #333;
        }
    </style>

{% endblock %}
