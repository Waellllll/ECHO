{% extends 'baseback.html.twig' %}

{% block title %}liste de Materiels{% endblock %}

{% block body %}
    <h1>liste de Materiels</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Description</th>
                <th>Image</th>
                <th>Marque</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.id }}</td>
                <td>{{ materiel.nom }}</td>
                <td>{{ materiel.type }}</td>
                <td>{{ materiel.description }}</td>
                <td>{{ materiel.image }}</td>
                <td>{{ materiel.marque }}</td>
                <td>{{ materiel.prix }}</td>
                <td>{{ materiel.categorie }}</td>
                <td>
                    <a href="{{ path('app_materiel_show', {'id': materiel.id}) }}">show</a>
                    <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_materiel_new') }}">Create new</a>
{% endblock %}
